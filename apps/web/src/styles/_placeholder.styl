// Fork https://github.com/zafree/placeholder
.Placeholder
  position relative
  display inline-block
  width 100%
  height auto
  margin-bottom 20px
  background #fff
  text-align left

  &__avatar
    float left
    width 36px
    height 36px
    margin-right 10px
    -webkit-border-radius 500px
            border-radius 500px
    background-color rgba(0, 0, 0, .05)

  &__metaInline
    position relative
    display inline-block
    width 70%
    height 36px
    margin-bottom 10px

    &::before
      position absolute
      top 6px
      width 60%
      height 8px
      content ""
      background-color rgba(0, 0, 0, .05)

    &::after
      position absolute
      top 22px
      width 40%
      height 8px
      content ""
      background-color rgba(0, 0, 0, .05)

  &__inline
    display inline-block
    float left
    clear both
    width 100%
    height 10px
    margin-top 7px
    margin-bottom 7px
    background-color rgba(0, 0, 0, .05)

    &--leftover
      width 80%

  &__img
    display inline-block
    width 100%
    height 260px
    background-color rgba(0, 0, 0, .05)
